// Create a C++ program to show the smallest and largest integer, the total, and the average of an array that take 10 elements only
#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
	int i, L, S;
	float Ave, arr[10], Total= 0.0;
	
	cout << "Input ten numbers " << endl;
	
	for ( i = 0; i < 10; i++ )
	arr[i] = 0;
	
	for( i = 0; i < 10; i++)
	cin >> arr[i];
	
	L= arr[0];
	for ( i = 0; i < 10; i++)
	{
		if ( L < arr[i])
		L = arr[i];
	}
	
	S = arr[0];
	for ( i = 0; i < 10; i++ )
	{
		if ( S > arr[i])
		S = arr[i];
	}
	
	for( i = 0; i < 10; i++ )
	{
		Total = Total + arr[i];
		Ave = (Total/10);
	}
	
	cout << "The Largest Integer is " << L;
	cout << ' ' << endl;
	cout << "The Smallest Integer is " << S;
	cout << ' ' << endl;
	cout << "The Total of the ten numbers is " << Total;
	cout << ' ' << endl;
	cout << "The Average of the ten numbers is " << Ave;
	
	_getch();
	return 0;
}
